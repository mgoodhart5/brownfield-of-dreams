<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email %> </li>
  </ul>

  <%= button_to("Connect to Github", "https://github.com/login/oauth/authorize?client_id=#{ENV['CLIENT_ID']}", class: "btn btn-primary mb1 bg-teal") %>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
  <section class="github">
    <h1>Github</h1>
    <ul class="repo">
    <% @repos.each do |repo| %>
      <li class="name"><%= link_to "#{repo.name}", "#{repo.url}" %></li>
    <% end %>
    </ul>
  </section>
  <section class="github_followers">
    <h1>Followers</h1>
    <ul class="followers">
    <% @followers.each do |follower| %>
      <li class="handle"><%= link_to "#{follower.name}", "#{follower.url}" %></li>
    <% end %>
    </ul>
  </section>
  <section class="github_following">
    <h1>Following</h1>
    <ul class="followings">
    <% @followings.each do |following| %>
      <li class="handle"><%= link_to "#{following.name}", "#{following.url}" %></li>
    <% end %>
    </ul>
  </section>
</section>
